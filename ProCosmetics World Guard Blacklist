storage:
  # Types: SQLITE or MYSQL.
  type: MYSQL

  mysql:
    host: db1.private.ecc.eco
    port: 3306
    database: cosmo
    table: procosmetics
    user: cosmo
    password: EcoCosmoDev
    properties: "autoReconnect=true"

  sqlite:
    database: procosmetics
